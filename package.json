{
  "name": "fastify-boilerplate",
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "npm run build:ts && dotenv -e .env -- node dist/src/main.js",
    "prod": "node dist/src/main.js",
    "dev": "dotenv -e .env.dev -- tsx watch src/main.ts",
    "run:ts": "tsx src/main.ts",
    "watch:ts": "tsx watch src/main.ts",
    "build:ts": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint ./src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init && prisma generate",
    "prisma:reset": "prisma migrate reset --force && prisma generate",
    "prisma:deploy": "prisma migrate deploy && prisma generate",
    "prisma:seed": "prisma db seed",
    "tree": "tree -I 'node_modules|dist|prisma|coverage|.git'"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/awilix": "^7.0.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.0",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/redis": "^7.0.2",
    "@fastify/static": "^8.1.1",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "@prisma/client": "^6.5.0",
    "@types/uuid": "^10.0.0",
    "awilix": "^12.0.5",
    "c8": "^10.1.3",
    "close-with-grace": "^2.2.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "got": "^14.4.6",
    "ioredis": "^5.6.0",
    "kafkajs": "^2.2.4",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/config-array": "^0.19.2",
    "@eslint/js": "^9.23.0",
    "@eslint/object-schema": "^2.1.6",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "@vitest/coverage-v8": "^3.0.9",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.2.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "fastify-tsconfig": "^3.0.0",
    "glob": "^11.0.1",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "prisma": "^6.5.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9",
    "vitest-mock-extended": "^3.0.1"
  }
}
